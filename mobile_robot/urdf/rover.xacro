<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="rover">

 <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>
  <material name="black">
    <color rgba="0 0 0 1"/>
    <texture filename =""/>
  </material>
  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>
  <material name="red">
    <color rgba="1 0 0 1"/>
  </material>

  <link name="base_footprint"/>
    
    <!-- Body-->
    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.8 0.7 0.1"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.8 0.7 0.1"/>
            </geometry>
        </collision>
        <inertial>
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
                <mass value="1.0"/>
                <inertia ixx="0.4" ixy="0.0" ixz="0.0"
                        iyy="0.4" iyz="0.0"
                        izz="0.2"/>
            </inertial>
    </link>
    <joint name="base_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin rpy="0 0 0" xyz="0.0 0.0 0.135" />
        <axis xyz="0.0 0.0 0.0"/>
    </joint>

    <xacro:macro name="wheel" params="name x y side">
        <link name="${name}_wheel_link">
            <visual>
                <geometry>
                    <cylinder radius="0.15" length="0.1"/>
                    <!-- <mesh filename="package://mobile_robot/meshes/left_tire.stl" scale="0.01 0.01 0.01"/> -->
                </geometry>
                <material name="black"/>
            </visual>
            <collision>
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
                <geometry>
                    <cylinder radius="0.15" length="0.1"/>
                    <!-- <mesh filename="package://mobile_robot/meshes/left_tire.stl" scale="0.01 0.01 0.01"/> -->
                </geometry>
            </collision>
            <inertial>
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
                <mass value="0.5"/>
                <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
            </inertial>
        </link>
        <joint name="${name}_wheel_joint" type="continuous">
            <parent link="base_link"/>
            <child link="${name}_wheel_link"/>
            <origin rpy="1.57 0 0" xyz="${x} ${y} 0.0"/>
            <axis xyz="0.0 0.0 1.0"/>
        </joint>
    </xacro:macro>
    
    <!-- Front Right Wheel -->
    <xacro:wheel name="front_right" x="-0.25" y="0.4" side="right"/>
    <!-- Rear Left Wheel -->
    <xacro:wheel name="rear_left" x="0.25" y="-0.4" side="left"/>
    <!-- Rear Right Wheel -->
    <xacro:wheel name="rear_right" x="0.25" y="0.4" side="right"/>

    <xacro:property name="side" value="front_left"/>
    <!-- Front Left Wheel -->
    <link name="${side}_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="0.15" length="0.1"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.15" length="0.1"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="0.5"/>
            <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
        </inertial>
    </link>
    <joint name="${side}_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="${side}_wheel_link"/>
        <origin rpy="1.57 0 0" xyz="-0.25 -0.4 0.0"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>
    
</robot>